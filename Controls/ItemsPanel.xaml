<UserControl x:Class="gc_bot.Controls.ItemsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Border Padding="8">
        <!-- Use a DataGrid for a column-aligned table view so different roles' values align -->
        <DataGrid x:Name="PART_DataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  EnableRowVirtualization="True"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
            <DataGrid.Columns>
                <!-- Selection checkbox column -->
                <DataGridCheckBoxColumn Header="" Binding="{Binding IsSelected, Mode=TwoWay}" Width="40"/>

                <DataGridTextColumn Header="Region" Binding="{Binding Region}" Width="120"/>
                <DataGridTextColumn Header="Server" Binding="{Binding Server}" Width="70"/>
                <DataGridTextColumn Header="Faction" Binding="{Binding Faction}" Width="120"/>
                <DataGridTextColumn Header="Nickname" Binding="{Binding Nickname}" Width="150"/>
                <DataGridTextColumn Header="Lv" Binding="{Binding Level}" Width="50"/>

                <!-- Resources -->
                <DataGridTextColumn Header="Gold" Binding="{Binding Gold}" Width="80"/>
                <DataGridTextColumn Header="Silver" Binding="{Binding Silver}" Width="80"/>
                <DataGridTextColumn Header="Wood" Binding="{Binding Wood}" Width="80"/>
                <DataGridTextColumn Header="Grain" Binding="{Binding Grain}" Width="80"/>
                <DataGridTextColumn Header="RefinedIron" Binding="{Binding RefinedIron}" Width="90"/>
                <DataGridTextColumn Header="Meteorite" Binding="{Binding Meteorite}" Width="90"/>
                <DataGridTextColumn Header="Silk" Binding="{Binding Silk}" Width="80"/>
                <DataGridTextColumn Header="Pouches" Binding="{Binding Pouches}" Width="80"/>
                <DataGridTextColumn Header="Charcoal" Binding="{Binding Charcoal}" Width="80"/>
                <DataGridTextColumn Header="Essence" Binding="{Binding Essence}" Width="80"/>
                <DataGridTextColumn Header="PreciousOre" Binding="{Binding PreciousOre}" Width="90"/>
                <DataGridTextColumn Header="Phantoms" Binding="{Binding Phantoms}" Width="80"/>

                <!-- Action column: only Remove (per-row) -->
                <DataGridTemplateColumn Header="Actions" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Remove" Width="80" Margin="4,0"
                                        Click="RemoveRow_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Border>
</UserControl>